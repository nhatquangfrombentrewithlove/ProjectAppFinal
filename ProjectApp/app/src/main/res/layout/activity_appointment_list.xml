<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorList2"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/layoutLichhen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:gravity="start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appointment"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingTop="20dp">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvDoctor"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avabsgiang"
            android:gravity="center">
        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/txtDoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_bacsi"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:textColor="@color/color_app_black"
                />
            <TextView
                android:id="@+id/txtApointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apointment"
                android:textColor="@color/color_app_black"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="end"
            >
            <Button
                android:id="@+id/btnTiep1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_button_next"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvDoctor1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avabsquang"
            android:gravity="center">
        </de.hdodenhof.circleimageview.CircleImageView>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/txtDoctorName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_bacsi1"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:textColor="@color/color_app_black"
                />
            <TextView
                android:id="@+id/txtApointment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apointment"
                android:textColor="@color/color_app_black"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="end"
            >
            <Button
                android:id="@+id/btnTiep2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_button_next"
                android:gravity="end"/>
        </LinearLayout>
    </LinearLayout>

