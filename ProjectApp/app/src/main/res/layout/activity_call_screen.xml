<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/avabsgiang"
    android:orientation="vertical"
    tools:context=".Call_screen">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imvShapeable"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:src="@drawable/avaquan"
        app:shapeAppearanceOverlay="@style/RoundSquare"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/btnCallmute"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/callmute"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="635dp" />

    <ImageButton
        android:id="@+id/btnCallend"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/callend"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="615dp" />

    <ImageButton
        android:id="@+id/btnCallcamera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/callcamera"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="635dp" />

</androidx.constraintlayout.widget.ConstraintLayout>