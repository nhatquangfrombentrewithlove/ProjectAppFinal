<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Doctor_detail"
        android:orientation="vertical"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button_back"
                android:gravity="start" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="40dp"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avabsgiang"
                    android:gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:text="@string/name_bacsi"
                    android:textColor="@color/color_app_black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/name_subinfor"
                    android:textColor="@color/color_app_black"/>
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.001"
                    android:theme="@style/RatingBar"
                    android:layout_gravity="center" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ban_chung"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp"
                    android:textSize="20sp"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fee"
                    android:textSize="20sp"
                    android:gravity="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp_value"
                    android:textSize="16sp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/color_app_black"/>
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fee_value"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:gravity="end"
                    android:textColor="@color/color_app_black"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/major"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/major_detail"
                android:textColor="@color/color_app_black"
                android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="NhÃ£n"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="1">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/radCoChungChi"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/co_chung_chi"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radCoKinhNghiem"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/co_kinh_nghiem"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">
                <CheckBox
                    android:id="@+id/radThanThien"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/than_thien"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radBinhDangGioi"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/binh_dang_gioi"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">
                <CheckBox
                    android:id="@+id/radTuVanAo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/tu_van_ao"
                    android:textSize="16sp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radChiPhiRe"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/chi_phi_re"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
        </TableLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView

                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp"/>

            <ListView
                android:id="@+id/lvReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:listitem="@layout/review"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xem_them"
                android:textColor="@color/color_app_black"
                android:backgroundTint="@color/color_app_white_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lvReview"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBooking"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/book"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:background="@drawable/button"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>
</ScrollView>