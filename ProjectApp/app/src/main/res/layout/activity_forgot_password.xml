<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_password"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_button_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:src="@drawable/logo"
                android:layout_gravity="center">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_forgot_password"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="22dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Insert_forgot_email"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/edtEmailKP"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="@string/hint_email"
        android:background="@drawable/edit_text"/>
    <TextView
        android:id="@+id/txtGuiMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gui_ma"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/color_high_light_blue"
        android:layout_gravity="end"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập OTP"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/edtOTP"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:hint="Mã OTP gửi đến Email hoặc SĐT"
        android:background="@drawable/edit_text"/>
    <Button
        android:id="@+id/btnResetPW"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:text="Đặt lại mật khẩu"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/introduction_reset_password"
        android:textSize="20sp"
        android:textColor="@color/color_app_dark_gray"
        android:layout_marginTop="30sp"/>
</LinearLayout>