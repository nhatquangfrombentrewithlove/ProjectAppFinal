<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoleOption"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_gravity="top"
        android:src="@drawable/bghead" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Banlaai"
        android:textColor="@color/color_app_black"
        android:layout_marginTop="-70dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnChooseUser"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/button_press"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/Benhnhan"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btnChooseTherapist"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/button_press"
        android:enabled="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-50dp"
        android:text="@string/Bacsi"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="246dp"
        android:layout_gravity="bottom"
        android:src="@drawable/bgfoot" />
</LinearLayout>