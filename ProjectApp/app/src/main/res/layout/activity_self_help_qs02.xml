<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfHelpQS_02"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Đánh giá sức khỏe tinh thần của bạn trong những hoạt động hàng ngày"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/color_app_black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bạn hãy tự đánh giá sức khỏe tinh thần của bạn từ thấp đến cao"
        android:textSize="20sp"
        android:textColor="@color/color_app_black" />

    <View
        android:layout_width="320dp"
        android:layout_height="4dp"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thấp"
            android:textSize="20sp"
            android:textColor="@color/color_app_black"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bình thường"
            android:textSize="20sp"
            android:textColor="@color/color_app_black"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao"
            android:textSize="20sp"
            android:textColor="@color/color_app_black"
            android:layout_marginLeft="40dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Giá trị bản thân"
        android:textSize="20sp"
        android:textColor="@color/color_app_black" />
    <com.google.android.material.slider.Slider
        android:id="@+id/sliderGiaTriBanThan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="1"
        android:valueTo="3"
        android:stepSize="1"
        android:theme="@style/MyMaterialTheme"/>
<!--        app:trackColor="@drawable/button"-->
<!--        app:thumbColor="@color/color_app_light_gray"-->
<!--        app:thumbStrokeColor="@color/color_high_light_blue"/>-->


</LinearLayout>