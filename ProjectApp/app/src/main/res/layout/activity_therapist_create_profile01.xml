<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Therapist_CreateProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindTheraphyQS_01"
        android:orientation="vertical"
        android:background="@color/background_color"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tạo hồ sơ của bạn"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/color_app_black" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ava"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/color_app_light_gray"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:civ_fill_color="@color/white">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/txtTherapistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Họ và tên"
            android:textColor="@color/color_app_black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtTherapistName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_spinner"
            android:textColor="@color/color_app_dark_gray"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/txtTherapistSpeciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Chuyên ngành"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Spinner
                android:id="@+id/spinnerTherapistSpeciality"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_spinner"
                android:textColor="@color/color_app_dark_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_drop_down"/>
        </FrameLayout>

        <TextView
            android:id="@+id/txtTherapistGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Giới tính"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Spinner
                android:id="@+id/spinnerTherapistGender"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_spinner"
                android:textColor="@color/color_app_dark_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_drop_down"/>
        </FrameLayout>

        <TextView
            android:id="@+id/txtCostPerTreatment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Chi phí mỗi lần điều trị"
            android:textColor="@color/color_app_black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtCostPerTreatment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_spinner"
            android:textColor="@color/color_app_dark_gray"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>