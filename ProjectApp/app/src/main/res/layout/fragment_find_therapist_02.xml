<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_color"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tìm bác sĩ tâm lý"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="@color/color_app_black" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Nơi ở của bạn"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Spinner
                android:id="@+id/spinnerAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_spinner"
                android:textColor="@color/color_app_dark_gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_drop_down"/>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoặc"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/color_app_black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sử dụng vị trí hiện tại"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/color_app_black" />

        <TextView
            android:id="@+id/txtEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Đánh giá"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.1"
            android:theme="@style/RatingBar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txtNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Nhãn"
            android:textColor="@color/color_app_black"
            android:textSize="20sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="1">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/radCoChungChi"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/co_chung_chi"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radCoKinhNghiem"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/co_kinh_nghiem"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">
                <CheckBox
                    android:id="@+id/radThanThien"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/than_thien"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radBinhDangGioi"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/binh_dang_gioi"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp">
                <CheckBox
                    android:id="@+id/radTuVanAo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/tu_van_ao"
                    android:textSize="16sp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginRight="10dp"/>
                <CheckBox
                    android:id="@+id/radChiPhiRe"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/chi_phi_re"
                    android:textSize="16dp"
                    android:button="@android:color/transparent"
                    android:textAlignment="center"
                    android:textColor="@color/color_app_dark_gray"
                    android:background="@drawable/check_box_theraphy"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtFeelComfortableOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn có cảm thấy thoải mái với việc tư vấn ảo?"
            android:textColor="@color/color_app_black"
            android:textSize="19sp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Spinner
                android:id="@+id/spinnerFeelComfortableOnline"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_spinner"
                android:textColor="@color/color_app_dark_gray"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_drop_down"/>
        </FrameLayout>

        <Button
            android:id="@+id/btnFindTherapist"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="@string/find_therapist"
            android:textColor="@color/background_color"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>